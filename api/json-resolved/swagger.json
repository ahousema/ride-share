          },
          "vehicleType" : {
            "type" : "string"
          }
        },
        "description" : "Type of a vehicle",
        "example" : {
          "id" : 42,
          "type" : "Pickup Truck"
        }
      },
      "Driver" : {
        "type" : "object",
