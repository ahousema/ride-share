        "example" : {
          "id" : 42,
          "userId" : 42,
          "licenseNumber" : 1245665313,
          "licenseState" : "IN"
        }
      },
      "Ride" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer"
          },
          "date" : {
            "type" : "string"
          },
          "time" : {
            "type" : "string"
          },
          "distance" : {
            "type" : "number"
          },
          "fuelPrice" : {
            "type" : "number"
          },
          "fee" : {
